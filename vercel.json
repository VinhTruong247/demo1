{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/not-authen",
      "destination": "/not-authen",
      "permanent": false
    },
    {
      "source": "/404",
      "destination": "/404",
      "permanent": false
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
